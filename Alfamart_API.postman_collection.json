				{
					"name": "Get Report by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/reports/1",
							"host": ["{{base_url}}"],
							"path": ["reports", "1"]
						},
						"description": "Mendapatkan detail laporan shift berdasarkan ID"
					},
					"response": []
				},
				{
					"name": "Create Report",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"month_year\": \"FEBRUARY 2026\",\n  \"shift\": 3,\n  \"report_date\": \"2026-02-06\",\n  \"details\": [\n    {\n      \"day_number\": 1,\n      \"transaction_date\": \"2026-02-01\",\n      \"spd\": 6360500,\n      \"std\": 107,\n      \"pulsa\": 0,\n      \"notes\": \"\"\n    },\n    {\n      \"day_number\": 2,\n      \"transaction_date\": \"2026-02-02\",\n      \"spd\": 2328400,\n      \"std\": 67,\n      \"pulsa\": 23500,\n      \"notes\": \"Promo hari ini\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/reports",
							"host": ["{{base_url}}"],
							"path": ["reports"]
						},
						"description": "Membuat laporan shift baru"
					},
					"response": []
				},
				{
