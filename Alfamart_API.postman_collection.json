					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"month_year\": \"FEBRUARY 2026\",\n  \"shift\": 3,\n  \"report_date\": \"2026-02-06\",\n  \"details\": [\n    {\n      \"day_number\": 1,\n      \"transaction_date\": \"2026-02-01\",\n      \"spd\": 6500000,\n      \"std\": 110,\n      \"pulsa\": 0,\n      \"notes\": \"Updated\"\n    }\n  ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/reports/1",
							"host": ["{{base_url}}"],
							"path": ["reports", "1"]
						},
						"description": "Update laporan shift yang sudah ada"
					},
					"response": []
				},
				{
					"name": "Delete Report",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/reports/1",
							"host": ["{{base_url}}"],
							"path": ["reports", "1"]
						},
						"description": "Hapus laporan shift"
					},
					"response": []
				}
			]
		}
	]
}
