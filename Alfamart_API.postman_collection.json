						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/reports?page=1&per_page=10",
							"host": ["{{base_url}}"],
							"path": ["reports"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "per_page",
									"value": "10"
								},
								{
									"key": "search",
									"value": "FEBRUARY",
									"disabled": true
								}
							]
						},
						"description": "Mendapatkan daftar semua laporan shift dengan pagination"
					},
					"response": []
